{
  "template": "small",
  "world": {
    "chunkEdgeLengthMeters": 10,
    "snapshots": {
      "snapshotWritePeriodSeconds": 0
    },
    "dimensions": {
      "xMeters": 200,
      "zMeters": 200
    }
  },
  "load_balancing": {
    "layer_configurations": [
      {
        "layer": "server",
        "rectangle_grid": {
          "cols": 1,
          "rows": 1
        }
      }
    ]
  },
  "workers": [
    {
      "worker_type": "ShovelerClient",
      "permissions": [
        {
          "entity_creation": {
            "allow": false
          },
          "entity_deletion": {
            "allow": false
          },
          "entity_query": {
            "allow": true,
            "components": [
              "*"
            ]
          }
        }
      ]
    },
    {
      "worker_type": "ShovelerServer",
      "permissions": [
        {
          "entity_creation": {
            "allow": true
          },
          "entity_deletion": {
            "allow": true
          },
          "entity_query": {
            "allow": true,
            "components": [
              "*"
            ]
          }
        }
      ]
    }
  ]
}
