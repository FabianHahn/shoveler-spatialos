{
  "build": {
    "tasks": [
      {
        "name": "Codegen",
        "steps": [
          {
            "name": "C++",
            "arguments": [
              "process_schema",
              "generate",
              "--cachePath=.spatialos/schema_codegen_cache",
              "--output=generated",
              "--language=cpp"
            ]
          }
        ]
      },
      {
        "name": "Build",
        "steps": [
          {
            "name": "Codegen",
            "arguments": [
              "invoke-task",
              "Codegen"
            ]
          },
          {
            "name": "Install dependencies",
            "arguments": [
              "worker_package",
              "unpack"
            ]
          },
          {
            "name": "Create build directory",
            "command": "mkdir",
            "arguments": [
              "-p",
              "build"
            ]
          },
          {
            "name": "Run CMake",
            "command": "bash",
            "arguments": [
              "cmake.sh"
            ]
          },
          {
            "name": "Build",
            "command": "bash",
            "arguments": [
              "cmake-build.sh",
              "ShovelerAssetUpdater"
            ]
          }
        ]
      },
      {
        "name": "Clean",
        "steps": [
          {
            "name": "Generated code",
            "arguments": [
              "process_schema",
              "clean",
              "--cachePath=.spatialos/schema_codegen_cache",
              ".spatialos/schema_codegen_proto",
              "generated"
            ]
          },
          {
            "name": "Dependencies",
            "arguments": [
              "worker_package",
              "clean"
            ]
          },
          {
            "name": "Remove build directory",
            "command": "rm",
            "arguments": [
              "-rf",
              "build"
            ]
          }
        ]
      }
    ]
  },
  "bridge": {
    "worker_attribute_set": {
      "attributes": [
        "updater"
      ]
    },
    "entity_interest": {
      "range_entity_interest": {
        "radius": 0
      }
    },
    "component_delivery": {
      "default": "RELIABLE_ORDERED",
      "checkout_all_initially": false,
      "override": {
        "shoveler.Canvas": {
          "checkout_initially": true
        },
        "shoveler.Chunk": {
          "checkout_initially": true
        },
        "shoveler.Client": {
          "checkout_initially": true
        },
        "shoveler.Drawable": {
          "checkout_initially": true
        },
        "shoveler.Material": {
          "checkout_initially": true
        },
        "shoveler.Model": {
          "checkout_initially": true
        },
        "shoveler.Resource": {
          "checkout_initially": true
        },
        "shoveler.Texture": {
          "checkout_initially": true
        },
        "shoveler.Tilemap": {
          "checkout_initially": true
        },
        "shoveler.TilemapTiles": {
          "checkout_initially": true
        },
        "shoveler.Tileset": {
          "checkout_initially": true
        },
        "shoveler.TileSprite": {
          "checkout_initially": true
        },
        "shoveler.TileSpriteAnimation": {
          "checkout_initially": true
        },
        "improbable.EntityAcl": {
          "checkout_initially": true
        },
        "improbable.Interest": {
          "checkout_initially": true
        },
        "improbable.Metadata": {
          "checkout_initially": true
        },
        "improbable.Position": {
          "checkout_initially": true
        }
      }
    }
  }
}
