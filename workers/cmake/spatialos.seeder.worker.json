{
  "build": {
    "tasks": [
      {
        "name": "Codegen",
        "steps": [
          {
            "name": "C++",
            "arguments": [
              "process_schema",
              "generate",
              "--cachePath=.spatialos/schema_codegen_cache",
              "--output=generated",
              "--language=cpp"
            ]
          }
        ]
      },
      {
        "name": "Build",
        "steps": [
          {
            "name": "Codegen",
            "arguments": [
              "invoke-task",
              "Codegen"
            ]
          },
          {
            "name": "Install dependencies",
            "arguments": [
              "worker_package",
              "unpack"
            ]
          },
          {
            "name": "Create build directory",
            "command": "mkdir",
            "arguments": [
              "-p",
              "build"
            ]
          },
          {
            "name": "Run CMake",
            "command": "cmake",
            "working_path": "build",
            "arguments": [
              ".."
            ]
          },
          {
            "name": "Build",
            "command": "cmake",
            "working_path": "build",
            "arguments": [
              "--build",
              ".",
              "--target",
              "seeder"
            ]
          },
          {
            "name": "Create snapshot directory",
            "command": "mkdir",
            "arguments": [
              "-p",
              "../../snapshots"
            ]
          },
          {
            "name": "Generate seed snapshot",
            "working_path": "build/seeder",
            "command": "./seeder",
            "arguments": [
              "../../../../snapshots/default.snapshot"
            ]
          }
        ]
      },
      {
        "name": "Clean",
        "steps": [
          {
            "name": "Generated code",
            "arguments": [
              "process_schema",
              "clean",
              "--cachePath=.spatialos/schema_codegen_cache",
              ".spatialos/schema_codegen_proto",
              "generated"
            ]
          },
          {
            "name": "Dependencies",
            "arguments": [
              "worker_package",
              "clean"
            ]
          },
          {
            "name": "Remove build directory",
            "command": "rm",
            "arguments": [
              "-rf",
              "build"
            ]
          }
        ]
      }
    ]
  },
  "bridge": {
    "componentDelivery": {
      "default": "RELIABLE_ORDERED",
      "checkoutAllInitially": false,
      "override": {}
    },
    "entity_interest": {
      "range_entity_interest": {}
    },
    "worker_attribute_set": {
      "attributes": []
    }
  }
}
